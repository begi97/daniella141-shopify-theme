<div
  id="cart-drawer"
  class="fixed inset-y-0 right-0 w-full max-w-md bg-white shadow-xl translate-x-full transition-transform duration-300 z-50 flex flex-col"
>
  <!-- Header -->
  <div class="p-6 flex justify-between items-center border-b">
    <h2 class="text-lg font-semibold">Your cart</h2>
    <button id="close-cart" class="text-xl">&times;</button>
  </div>

  <!-- Scrollable content -->
  <div
    id="cart-drawer-content"
    class="p-6 flex-1 overflow-y-auto"
  ></div>

  <!-- Footer (discount + checkout) -->
  <div class="p-6 border-t space-y-4">
    <div class="flex gap-2">
      <input
        id="discount-code"
        type="text"
        placeholder="Discount code"
        class="flex-1 border px-3 py-2"
      >
      <button
        id="apply-discount"
        class="border px-4 py-2 font-medium cursor-pointer"
      >
        Apply
      </button>
    </div>

    <a
      id="checkout-button"
      href="/checkout"
      class="block bg-black text-white py-3 text-center"
    >
      Checkout
    </a>
  </div>
</div>

<div
  id="cart-overlay"
  class="fixed inset-0 bg-black/40 hidden z-40"
></div>
